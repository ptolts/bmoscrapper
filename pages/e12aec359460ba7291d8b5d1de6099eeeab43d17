        var prodDescHeight = $("#product-description").height();
        var pdheight = 185;

        if (prodDescHeight <= 188) {
            $("#product-description .arrow").css("display", "none");
        }
        $("#product-description").css("height", pdheight);
        var prodDescExpanded = false;

        $("#product-description .arrow").click(function () {
            if (prodDescExpanded) {
                $("#product-description").animate({ "height": pdheight }, 250, function () {
                    $("#product-description .arrow").css("background-image", "url('images/arrow-expand.gif')");
                });

                prodDescExpanded = false;
            } else {
                $("#product-description").animate({ "height": prodDescHeight }, 250, function () {
                    $("#product-description .arrow").css("background-image", "url('images/arrow-contract.gif')");
                });
                prodDescExpanded = true;
