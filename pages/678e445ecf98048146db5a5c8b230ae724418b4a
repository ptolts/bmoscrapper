<script type="text/javascript">
    var iwidth;
    var iheight;

    $(document).ready(function () {
        $(".dynamic-img").click(function() {
		img = new Image();
		img.onload = function() {
			ratio = this.height / this.width
			adjusted_width = (this.width < 800 ? this.width : 800)
			adjusted_height = adjusted_width * ratio
			openImage(img.src, adjusted_width, adjusted_height);		
		};
		img.src = $(this).attr('src');
		});	

    });

	$(window).load(function() {
			$(".dynamic-img").each(function() {
				
				var theImage = new Image();
				
				theImage.src = $(this).attr("src");
				
				if ( typeof theImage.width != "undefined" && theImage.width > 32) 
				{
					$(this).parents(".automated-graph").show();			
				}
			});
	});

    function getimgwidth() {
        return iwidth;
    }

    function getimgheight() {
        return iheight;
    }
	
</script>



